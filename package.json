{
  "scripts": {
    "client": "parcel client/src/index.html --out-dir client/build/dist --cache-dir client/build/cache",
    "server": "node server/src/index.js",
    "dev": "CLIENT_ENABLED=true node server/src/index.js",
    "docker-client": "docker build -t redshade-client ./client",
    "docker-api": "docker build -t redshade-api ./server",
    "docker-run-api": "docker run --rm -d -p 5678:5678/tcp dummy-api:latest",
    "docker-run-client": "docker run --rm -d -p 5678:5678/tcp dummy-client:latest",
    "compose": "docker-compose up"
  }
}
